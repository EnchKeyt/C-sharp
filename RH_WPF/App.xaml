<Application x:Class="RH_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RH_WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonMenuStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="130"></Setter>
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="Background" Value="#4A67F7"></Setter>
            <Setter Property="Foreground" Value="#B5DEFA"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Vardana"></Setter>
        </Style>
        <Style x:Key="ImageMenuStyle" TargetType="Image">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Width" Value="70"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>
        <Style x:Key="ZagolovokStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="40"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontFamily" Value="Vardana"></Setter>
        </Style>
    </Application.Resources>
</Application>
