<Page x:Class="TNSDesktop.AbonentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNSDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AbonentPage">

    <Grid>
        <DataGrid x:Name="DgAbonent" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Абоненский номер" Binding="{Binding NumberAbonent}"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding LFM}"/>
                <DataGridTextColumn Header="Номер договора" Binding="{Binding NumberDoc}"/>
                <DataGridTextColumn Header="Лицевой счет" Binding="{Binding LS}"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Services.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
